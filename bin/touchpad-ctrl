#!/bin/bash

# Set touchpad enable

if [[ "$1" == "" ]]
then
	echo "Missing input: enable=1 or disable=0"
	exit 1
fi

# Sanitize input
ENABLE=$1
ENABLE=${1//[^01]/}
ENABLE=${ENABLE:0:1}
if [[ $ENABLE == "" ]]
then
	echo "Invalid input : $ENABLE"
	echo "Valid: 0 (disable) or 1 (enable)"
	exit 1
fi
echo "Input enable is $ENABLE"

deviceId=$(xinput list | grep TouchPad | grep -e "id=\w*" -o | grep -e "[0-9]*" -o)
echo "Found TouchPad: id $deviceId"

# Enable/Disable
xinput set-prop $deviceId "Device Enabled" $ENABLE

if [[ $ENABLE == "1" ]]
then
	echo "Enabled Touchpad"
else
	echo "Disabled Touchpad"
fi



