#!/bin/bash

#--------------------------------------------#
#
#               DIYA ATTACH2
#
#--------------------------------------------#
# version 0.8
# Antoine de Rengerv√©

IGNORE='-o -path *bower_components -prune -o -path *node_modules -prune '


OPT="#$1"
if [ $OPT == "#-h" ] || [ $OPT == "#--help" ]
then
    echo "diya-attach: attach files from dist to corresponding installation directory."
    echo "NB: does not comply with spaces in names of files"
    echo "Does not attach if file does not already exists."
    echo "Create files with diya-build -cpi. This allows to keep them managed by apt thus a next installation will remove and recreate files"
    exit
fi


CURRPATH=`pwd`
PROJECTS=`ls dist/ -I *.deb`

echo "PROJECTS: $PROJECTS"

for PROJ in $PROJECTS
do
	# correct select files not in DEBIAN
	FILES=`find ./dist/$PROJ -path "*/DEBIAN" -prune $IGNORE -o -type d -o  -print`

	for FILE in $FILES
	do
		#echo $FILE
		SUFF=""
		COUNT=10
        while [[ $COUNT -gt 1 ]]
        do
            SUFF="/*$SUFF"
            PREFIX=${FILE%$SUFF}
            NAME=${FILE#$PREFIX}
            COUNT=`find -path "./dist" -prune $IGNORE -o -type d -o -path "*$NAME" -print | wc -l`

			# PREFIX=${FILE%/*}
			# NAME=${FILE#$PREFIX}
			# COUNT=`find -path "./dist" -prune -o -path "*$NAME" -print | wc -l`

			SRCS=`find -path "./dist" -prune $IGNORE -o -type d -o -path "*$NAME" -print`
			#echo $NAME $SRCS $COUNT

			CANDIDATES=""
			if [ -z $NAME ]
			then
				COUNT=0
			fi

			if [ $COUNT -eq 1 ]
			then
				CANDIDATES=$SRCS
			fi
			if [ $COUNT -gt 1 ]
			then
				#echo $SRCS
				for SRC in $SRCS
				do
					#					echo "diff $SRC $FILE | wc -l"
					if [ -f $SRC ]
					then
						DIFF=`diff $SRC $FILE | wc -l`
						if [ $DIFF -eq 0 ]
						then
							CANDIDATES="$SRC $CANDIDATES"
						fi
					fi
				done
				COUNT=`echo $CANDIDATES | wc -w`
			fi
        done

		if [ $COUNT -eq 1 ]
		then
			SRC=$CURRPATH/$CANDIDATES
			DEST="${FILE##./dist/$PROJ}"
	        if [ -f $DEST ]
	        then
				rm $DEST
				ln -s $SRC $DEST
			else
				echo -e "Cannot attach some files!  $DEST does not exist !"
				echo -e "Please, diya-build -cpi before attaching."
			fi
		else
			PREFIX=${FILE%/*}
            NAME=${FILE#$PREFIX}
			if [ -z $NAME ]
			then
				NAME=$FILE
			fi
            SRCS=`find -path "./dist" -prune $IGNORE -o -type d -o -path "*$NAME" -print `

			echo "Cannot attach some files because could not determine source for $FILE"
            echo -e "Candidates are :\n$SRCS"
            echo "Consider removing $FILE if not relevant."
		fi
	done
done

echo "Attaching is done"
