[user]
	name = antoine.derengerve
	email = antoine.derengerve@gmail.com
[push]
	default = simple
[core]
	editor = vim
	excludesfile = /Users/antoine/.gitignore_global
[alias]
	amend = commit --amend
	st = status
	oneline = log --pretty=oneline --abbrev-commit --graph --decorate
	last = log -1 HEAD
	co = checkout
	ci = commit
	br = branch
	brv = branch -vv
	st = status
    	stt = diff --name-status
	dic = diff --cached	
	diffstat = diff --stat
	unstage = reset HEAD -- 
	diffmeld = difftool --tool=meld

[pull]
	rebase = false
[diff]
    tool = vscode
[difftool "vscode"]
    cmd = code --wait --diff $LOCAL $REMOTE
[merge]
    tool = vscode
[mergetool "vscode"]
    cmd = code --wait $MERGED
