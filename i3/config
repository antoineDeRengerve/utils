new_window 1pixel
# fenêtres flottantes:
new_float normal

set $Locker i3lock -c 000000 && sleep 1


#bindsym $mod+Ctrl+x exec shutdown -h now
set $mode_system System (l) lock, (e) logout, (s) suspend, (h) hibernate, (r) reboot, (Shift+s) shutdown
mode "$mode_system" {
    bindsym l exec --no-startup-id $Locker, mode "default"
    bindsym e exec --no-startup-id i3-msg exit, mode "default"
    bindsym s exec --no-startup-id $Locker && systemctl suspend, mode "default"
    bindsym h exec --no-startup-id $Locker && systemctl hibernate, mode "default"
    bindsym r exec --no-startup-id systemctl reboot, mode "default"
#    bindsym k exec --no-startup-id at_exit
    bindsym Shift+s exec --no-startup-id at_exit, mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
    bindsym space mode "default"
}

bindsym $mod+Escape mode "$mode_system"

# Il est possible de définir des raccourcis d'applications de 2 façons:
# bindsym renvoie au symbole de la touche (ça peut être aléatoire selon la disposition du clavier);
# bindcode renvoie au code de la touche obtenu via l'utilitaire de test d'évenements xev",
# c'est donc une méthode préférable pour les touches particulières:
bindsym $mod+Ctrl+e exec emacsclient -c
bindsym $mod+Ctrl+n exec pcmanfm "`xcwd`"
bindsym $mod+Ctrl+Shift+n exec pcmanfm
bindsym $mod+Ctrl+mod1+l exec $Locker # lock screen
bindsym --release $mod+Ctrl+p exec "scrot ~/Pictures/Screenshot_from_%Y-%m-%d_%H:%M:%S.png -e 'xclip -selection clipboard -t image/png -i $f'"
bindsym --release $mod+Ctrl+Shift+p exec "scrot ~/Pictures/Screenshot_from_%Y-%m-%d_%H:%M:%S.png -s -e 'xclip -selection clipboard -t image/png -i $f'"
bindsym --release Print exec scrot ~/Pictures/Screenshot_from_%Y-%m-%d_%H:%M:%S.png -e 'xclip -selection clipboard -t image/png -i $f'
bindsym --release Shift+Print exec scrot ~/Pictures/Screenshot_from_%Y-%m-%d_%H:%M:%S.png -s -e 'xclip -selection clipboard -t image/png -i $f'

## Manual management of external displays
# Set the shortcuts and what they do
set $mode_display Ext Screen (v) VGA ON, (h) HDMI ON, (V) VGA OFF, (H) HDMI OFF, (i) internal ON, (I) internal OFF, (l) LVDS OFF, (L) LVDS OFF, (p) presentation (low qual), (P) presentation (full hd)
mode "$mode_display" {
    bindsym v exec --no-startup-id xrandr --output VGA-1 --auto, mode "default"
    bindsym h exec --no-startup-id xrandr --output HDMI-1 --auto, mode "default"
    bindsym Shift+V exec --no-startup-id xrandr --output VGA-1 --auto --off, mode "default"
    bindsym Shift+H exec --no-startup-id xrandr --output HDMI-1 --auto --off, mode "default"
    # activate internal screen
    bindsym i exec xrandr --output eDP-1 --auto, mode "default"
    # disable internal screen
    bindsym Shift+I exec xrandr --output eDP-1 --off, mode "default"
    # activate internal screen
    bindsym l exec xrandr --output LVDS-1 --auto, mode "default"
    # disable internal screen
    bindsym Shift+L exec xrandr --output LVDS-1 --off, mode "default"
    # specific presentation mode
    bindsym p exec xrandr --output HDMI1 --right-of eDP-1 --mode 1024x768, mode "default"
    # full HD presentation mode
    bindsym Shift+p exec xrandr --output HDMI-1 --right-of eDP1 --auto, mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
    bindsym space mode "default"
}
# Declare here the shortcut to bring the display selection menu
bindsym $mod+x mode "$mode_display"


